@model PV100521_GUIA8.Models.Contacto
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar Contacto</h4>
            </div>
            <form action="@Url.Action("Editar","Contacto")" method="post">
                <input type="hidden" class="form-control" name="codigo_libro" value="@Html.DisplayTextFor(m => m.codigo_libro)" />
                <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" class="form-control" name="titulo_libro" value="@Html.DisplayTextFor(m => m.titulo_libro)" />
                </div>
                <div class="form-group">
                    <label>Apellidos</label>
                    <input type="text" class="form-control" name="isbn" value="@Html.DisplayTextFor(m => m.isbn)" />
                </div>
                <div class="form-group">
                    <label>Teléfono</label>
                    <input type="text" class="form-control" name="fecha_edicion" value="@Html.DisplayTextFor(m => m.fecha_edicion)" />
                </div>
                <div class="form-group">
                    <label>Correo</label>
                    <input type="text" class="form-control" name="nombre_autor_libro" value="@Html.DisplayTextFor(m => m.nombre_autor_libro)" />
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Contacto")">Volver</a>
            </form>
        </div>
    </div>
</div>
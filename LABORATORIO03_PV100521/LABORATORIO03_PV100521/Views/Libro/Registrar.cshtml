@model LABORATORIO03_PV100521.Models.Libro

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar nuevo libro</h2>

<style>
    .form-group input[type="text"] {
        width: 100%; /* Adjust the width as needed */
    }
</style>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4> Nuevo Contacto</h4>
            </div>
            <form action="@Url.Action("Registrar", "Libro")" method="post">
                <div class="form-group">
                    <label>Título del Libro</label>
                    <input type="text" class="form-control" name="TituloLibro" />
                </div>
                <div class="form-group">
                    <label>ISBN</label>
                    <input type="text" class="form-control" name="ISBN" />
                </div>
                <div class="form-group">
                    <label>Fecha de Edición</label>
                    <input type="text" class="form-control" name="FechaEdicion" />
                </div>
                <div class="form-group">
                    <label>Nombre del Autor del Libro</label>
                    <input type="text" class="form-control" name="NombreAutorLibro" />
                </div>
                <div class="form-group">
                    <label>Apellido del Autor del Libro</label>
                    <input type="text" class="form-control" name="ApellidoAutorLibro" />
                </div>
                <div class="form-group">
                    <label>Fecha de Nacimiento del Autor</label>
                    <input type="text" class="form-control" name="FechaNacimientoAutor" />
                </div>
                <div class="form-group">
                    <label>Descripción del Libro</label>
                    <textarea class="form-control" name="DescripcionLibro"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Libro")">Volver</a>
            </form>
        </div>
    </div>
</div>

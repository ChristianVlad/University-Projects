@model LABORATORIO03_PV100521.Models.Libro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar libro</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4> Editar Libro</h4>
            </div>
            <form action="@Url.Action("Edit", "Libro")" method="post">
                <input type="hidden" class="form-control" name="CodigoLibro" value="@Model.CodigoLibro" />
                <div class="form-group">
                    <label>Título del Libro</label>
                    <input type="text" class="form-control" name="TituloLibro" value="@Model.TituloLibro" />
                </div>
                <div class="form-group">
                    <label>ISBN</label>
                    <input type="text" class="form-control" name="ISBN" value="@Model.ISBN" />
                </div>
                <div class="form-group">
                    <label>Fecha de Edición</label>
                    <input type="text" class="form-control" name="FechaEdicion" value="@Model.FechaEdicion" />
                </div>
                <div class="form-group">
                    <label>Nombre del Autor del Libro</label>
                    <input type="text" class="form-control" name="NombreAutorLibro" value="@Model.NombreAutorLibro" />
                </div>
                <div class="form-group">
                    <label>Apellido del Autor del Libro</label>
                    <input type="text" class="form-control" name="ApellidoAutorLibro" value="@Model.ApellidoAutorLibro" />
                </div>
                <div class="form-group">
                    <label>Fecha de Nacimiento del Autor</label>
                    <input type="text" class="form-control" name="FechaNacimientoAutor" value="@Model.FechaNacimientoAutor" />
                </div>
                <div class="form-group">
                    <label>Descripción del Libro</label>
                    <textarea class="form-control" name="DescripcionLibro">@Model.DescripcionLibro</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Libro")">Volver</a>
            </form>
        </div>
    </div>
</div>


